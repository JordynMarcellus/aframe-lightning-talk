/**
 * Black theme for reveal.js. This is the opposite of the 'white' theme.
 *
 * By Hakim El Hattab, http://hakim.se
 */


// Default mixins and settings -----------------
@import "./template/mixins";
// ---------------------------------------------

// Override theme settings (see ../template/settings.styl)
backgroundColor = rgba(0,0,0,0.4);
mainColor = #fff
headingColor = #fff
blockMargin = 1.44em;
mainFontSize = 1.5em
mainFont = 'Roboto Mono', Helvetica, sans-serif
headingFont = Rubik, Helvetica, sans-serif
headingTextShadow = none
heading1TextShadow = 0px 4px 3px rgba(0,0,0,0.4)
headingLetterSpacing = normal
headingTextTransform = uppercase
headingFontWeight = 600
linkColor = darken( #bdc3c7, 10)
linkColorHover = lighten( linkColor, 15 );
selectionBackgroundColor = lighten( linkColor, 25 );

heading1Size = 2.2em;
heading2Size = 1.6em;
heading3Size = 1.3em;
heading4Size = 1.0em;

section.has-light-background
	&, h1, h2, h3, h4, h5, h6
		color: #222;

.reveal .slides p,
.reveal .slides ul
	text-align: left

.reveal code
	background-color: rgba(241,241,241, 0.08)

// CSS SPECIFICITY
h2.fragment.shadowed
	text-shadow: 0px 4px 3px rgba(0,0,0,0.4)

h1,h2,h3,h4,h5,h6
	text-align: center

.reveal .slides 
	text-align: left

.credit
	position: absolute
	right: 0

.credit > h6
	font-size: 0.75em
	margin: 0 !important 
	text-color: white

.credit > h6 > a
	color: white;
	text-decoration: underline white


section.credited-section > h1
	padding-top: 25%
	@media screen and (min-height: 1000px)
		padding-top: 20%
section.credited-section
	height:100vw

section.credited-section > .credit
	bottom: 50%
	// haha, okay. this is very specific for big screen sizes but... there's a reason for that!
	@media screen and (min-height: 1000px)
		bottom: 60%

